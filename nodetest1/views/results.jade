doctype html
html
  head
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    //link(rel='stylesheet', href='/stylesheets/style.css')
    include mixins
  body(style='font-family:Helvetica')
    .nav.navbar.navbar-light(style='background-color: #ffda56')
      a.navbar-brand(href='/eventslist')
        img.d-inline-block.align-top(src='/images/logo.png', width='20', height='30', alt='')
    .container
      .d-flex.justify-content-center(style='margin: 10vh 0 0 0')
        form.formcenter.d-flex.justify-content-between(name="searching",method="post",action="/searching",novalidate='')
            p keyword
            input.form-control.col.col-md-3(type='text', aria-label='',name='keyword')
            select#inputGroupSelect01(classs='custom-elect col col-md-3',name='category')
              option(value='allcat', selected='') All catagories
              option(value='ComSci') Computer Science
              option(value='Finance') Finance
              option(value='Life') Life
              option(value='HomeEcon') House Economics
              option(value='Culture') Culture
              option(value='others') Others
            p price
            input.form-control.col.col-md-2(type='text', aria-label='',name='pstart',value=0)
            |  to
            input.form-control.col.col-md-2(type='text', aria-label='',name='pend',value=50000)
            button.btn.btn-primary(role='button') Submit
    .row(style='margin: 0 10vw 0 10vw') 
      each row in userlist
        #content.col-sm-4.justify-content-center.d-flex.flex-column.justify-content-start(style='margin: 3vh 0 6vh 0')
            .media.border
            img.align-self-start.mr-3(src='/images/defaultimage.jpg', alt='Generic placeholder image', width='375', height='300')
            .media-body
                .h5.mt-0(class = 'text-primary')= row.Ename
                h6
                  b Category : 
                  | #{row.Category}
                -  var price = Number(row.Price)
                -  if(price == 0){
                -  price = 'Free'
                -  }
                h6
                  b Price : 
                  | #{price} 
                a(class="btn btn-primary" href=`/events/${row._id}` role="button")= 'See More'